{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table" border="1">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Date_deb</th>
                <td>{{ article.dateDeb ? article.dateDeb|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ article.dateFin ? article.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Prix_depart</th>
                <td>{{ article.prixDepart }}</td>
            </tr>
            <tr>
                <th>Prix_final</th>
                <td>{{ article.prixFinal }}</td>
            </tr>
            <tr>
                <th>PrixEnchereMax</th>
                <td>{{ article.prixEnchereMax }}</td>
            </tr>
            <tr>
                <th>BiddingPrices</th>
                <td>{{ article.biddingPrices ? article.biddingPrices|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Winningbidingprice</th>
                <td>{{ article.winningbidingprice }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}">back to list</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
